{
  "manifest_version": 3,
  "name": "中英互译助手",
  "version": "1.0.0",
  "description": "智能双向翻译,支持中英互译。可使用Google翻译或AI翻译(GPT/Claude等)",
  "permissions": [
    "contextMenus",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://translate.googleapis.com/*",
    "https://api.openai.com/*",
    "https://*/*",
    "http://127.0.0.1:*/*",
    "http://localhost:*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "translator.js",
        "content.js"
      ],
      "css": [
        "content.css"
      ],
      "run_at": "document_end"
    }
  ],
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}