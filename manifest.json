{
  "manifest_version": 3,
  "name": "英译中翻译助手",
  "version": "1.0.0",
  "description": "选择英文文本即可快速翻译成中文",
  "permissions": [
    "contextMenus",
    "activeTab"
  ],
  "host_permissions": [
    "https://translate.googleapis.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["translator.js", "content.js"],
      "css": ["content.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
